    "lucide-react": "^0.546.0",
    "mongodb": "^6.10.0",
    "next": "^16.0.0",
    "pixi.js": "^8.14.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-joyride": "^2.9.3",
    "react-konva": "^19.0.10",
